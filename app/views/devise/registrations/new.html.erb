<%=stylesheet_link_tag('devise')%>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'sign-in-form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form_field'  %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email",placeholder: "Use Name", class: 'form_field'  %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form_field'  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form_field'  %>
  </div>

  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio, size: "autox10", autocomplete: "bio", class: 'form_field'  %>
  </div>

  <%= f.hidden_field :posts_counter, value: 0 %>
  <%= f.hidden_field :photo, value: 'https://randomuser.me/api/portraits/men/31.jpg' %>

  <div class="actions">
    <%= f.submit "Sign up", class: 'form_field'  %>
  </div>
<% end %>

<%= render "devise/shared/links"%>